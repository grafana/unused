
FROM --platform=$BUILDPLATFORM golang:1.25@sha256:cc737435e2742bd6da3b7d575623968683609a3d2e0695f9d85bee84071c08e6 AS builder

ENV GO11MODULE=on

# These ARGs to be populated by Docker Buildx call
ARG TARGETOS
ARG TARGETARCH

WORKDIR /app

COPY ["go.mod", "go.sum", "./"]

RUN ["go", "mod", "download"]

COPY . .

RUN CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH \
    go build -v -o unused-exporter ./cmd/unused-exporter


FROM alpine:3.23.3@sha256:25109184c71bdad752c8312a8623239686a9a2071e8825f20acb8f2198c3f659

COPY --from=builder /app/unused-exporter /app/

EXPOSE 8080

ENTRYPOINT ["/app/unused-exporter"]
