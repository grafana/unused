FROM golang:1.25@sha256:a22b2e6c5e753345b9759fba9e5c1731ebe28af506745e98f406cc85d50c828e AS builder

ENV GO11MODULE=on

WORKDIR /app

COPY ["go.mod", "go.sum", "./"]

RUN ["go", "mod", "download"]

COPY . .

ENV CGO_ENABLED=0 GOOS=linux GOARCH=amd64

RUN ["go", "build", "-v", "-o", "unused-exporter", "./cmd/unused-exporter"]

FROM alpine:3.23.0@sha256:51183f2cfa6320055da30872f211093f9ff1d3cf06f39a0bdb212314c5dc7375

COPY --from=builder /app/unused-exporter /app/

EXPOSE 8080

ENTRYPOINT ["/app/unused-exporter"]
